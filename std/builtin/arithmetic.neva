// All arithmetic operations support IStreamHandler
// and thus could be used with bridges.

components {
    #extern(int IntAdder, float FloatAdder, string StringAdder)
    pub Adder<
        T int | float | string
    >(seq stream<T>) (res T)

    #extern(int IntSubstractor, float FloatSubstractor)
    pub Substractor<
        T int | float
    >(seq stream<T>) (res T)

    #extern(int IntMultiplier, float FloatMultiplier)
    pub Multiplier<T int | float>(seq stream<T>) (res T)

    #extern(int IntDivider, float FloatDivider)
    pub Divider<T int | float>(seq stream<T>) (res T)
}
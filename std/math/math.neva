// These are natural extention for arithmetic operators in builtin package.
// Just like them, these implement IStreamHandler
// and thus could be used with bridges.

component {
    #extern(int pow_ints, float pow_floats)
    pub Pow<T int | float>(seq stream<T>) (res T)

    #extern(int mod_ints, float mod_floats)
    pub Mod<T int | float>(seq stream<T>) (res T)

    #extern(int abs_ints, float abs_floats)
    pub Abs<T int | float>(seq stream<T>) (res T)
}
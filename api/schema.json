{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["in", "out", "deps", "workers", "net"],
  "definitions": {
    "ports": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "*": { "enum": ["int", "str", "bool"] }
      }
    }
  },
  "properties": {
    "in": {
      "$ref": "#/definitions/ports"
    },
    "out": {
      "$ref": "#/definitions/ports"
    },
    "deps": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "*": {
          "$ref": "#/definitions/ports"
        }
      }
    },
    "workers": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "in": { "not": true },
        "out": { "not": true },
        "*": {
          "type": "string"
        }
      }
    },
    "net": {
      "type": "object"
    }
  },
  "additionalProperties": false
}

package irgen_test

import (
	"context"
	"testing"

	"github.com/stretchr/testify/assert"

	"github.com/nevalang/neva/internal/compiler"
	"github.com/nevalang/neva/internal/compiler/llrgen"
	"github.com/nevalang/neva/internal/compiler/llrgen/helper"
)

var h helper.Helper

func TestGenerator_Generate(t *testing.T) {
	tests := []struct {
		name    string
		prog    shared.HighLvlProgram
		want    shared.LowLvlProgram
		wantErr error
	}{
		// TODO - pkgs==nil test
		{
			name: "program that does nothing",
			prog: shared.HighLvlProgram{ // start -> trigger.sigs[0]; trigger.v = 0; trigger.v -> exit
				"io": {
					Entities: map[string]shared.Entity{
						"Print": {
							Exported: true,
							Kind:     shared.ComponentEntity,
							Component: shared.Component{
								IO: shared.IO{
									In: map[string]shared.Port{
										"v": {},
									},
									Out: map[string]shared.Port{
										"v": {},
									},
								},
							},
						},
					},
				},
				"flow": {
					Entities: map[string]shared.Entity{
						"Trigger": {
							Exported: true,
							Kind:     shared.ComponentEntity,
							Component: shared.Component{
								IO: shared.IO{
									In: map[string]shared.Port{
										"sigs": {IsArr: true},
										"v":    {},
									},
									Out: map[string]shared.Port{
										"v": {},
									},
								},
							},
						},
					},
				},
				"main": {
					Imports: h.Imports("flow"),
					Entities: map[string]shared.Entity{
						"code": h.IntMsg(false, 0),
						"main": h.MainComponent(
							map[string]shared.Node{
								"trigger": h.NodeWithStaticPorts(
									h.NodeInstance("flow", "Trigger", h.Rec(nil)),
									map[shared.RelPortAddr]shared.EntityRef{
										{Name: "v"}: {Name: "code"},
									},
								),
							},
							[]shared.Connection{
								{
									SenderSide: shared.SenderConnectionSide{
										PortConnectionSide: shared.PortConnectionSide{
											PortAddr: shared.ConnPortAddr{
												Node: "in",
												RelPortAddr: shared.RelPortAddr{
													Name: "start",
												},
											},
										},
									},
									ReceiverSides: []shared.PortConnectionSide{
										{
											PortAddr: shared.ConnPortAddr{
												Node: "trigger.",
												RelPortAddr: shared.RelPortAddr{
													Name: "sig",
												},
											},
										},
									},
								},
								{
									SenderSide: shared.SenderConnectionSide{
										PortConnectionSide: shared.PortConnectionSide{
											PortAddr: shared.ConnPortAddr{
												Node: "trigger",
												RelPortAddr: shared.RelPortAddr{
													Name: "v",
												},
											},
										},
									},
									ReceiverSides: []shared.PortConnectionSide{
										{
											PortAddr: shared.ConnPortAddr{
												Node: "out.exit.",
												RelPortAddr: shared.RelPortAddr{
													Name: "sig",
												},
											},
										},
									},
								},
							},
						),
					},
				},
			},
			want: shared.LowLvlProgram{
				Ports: map[shared.LLPortAddr]uint8{
					{Path: "main/in", Name: "start"}:               0,
					{Path: "main/out", Name: "exit"}:               0,
					{Path: "trigger.in", Name: "sigs", Idx: 0}:     0,
					{Path: "main/trigger/in", Name: "v", Idx: 0}:   0,
					{Path: "main/trigger/out", Name: "v", Idx: 0}:  0,
					{Path: "main/giver/out", Name: "code", Idx: 0}: 0,
				},
				Funcs: []shared.LLFunc{
					{
						Ref: shared.LLFuncRef{
							Pkg:  "flow",
							Name: "Giver",
						},
						IO: shared.LLFuncIO{
							Out: []shared.LLPortAddr{
								// TODO
							},
						},
						MsgRef: "",
					},
					{
						Ref: shared.LLFuncRef{Pkg: "flow", Name: "Trigger"},
						IO: shared.LLFuncIO{
							In: []shared.LLPortAddr{
								{Path: "trigger.in", Name: "sigs"},
								{Path: "trigger.in", Name: "v"},
							},
							Out: []shared.LLPortAddr{
								{Path: "trigger.out", Name: "v"},
							},
						},
					},
				},
				Net: []shared.LLConnection{
					{
						SenderSide: shared.LLConnectionSide{
							PortAddr: shared.LLPortAddr{Name: "start"},
						},
						ReceiverSides: []shared.LLConnectionSide{
							{
								PortAddr: shared.LLPortAddr{Path: "trigger.in", Name: "sigs"},
							},
						},
					},
					{
						SenderSide: shared.LLConnectionSide{
							PortAddr: shared.LLPortAddr{Path: "giver.out", Name: "code"},
						},
						ReceiverSides: []shared.LLConnectionSide{
							{
								PortAddr: shared.LLPortAddr{Path: "trigger.in", Name: "v"},
							},
						},
					},
					{
						SenderSide: shared.LLConnectionSide{
							PortAddr: shared.LLPortAddr{Path: "trigger.out", Name: "v"},
						},
						ReceiverSides: []shared.LLConnectionSide{
							{
								PortAddr: shared.LLPortAddr{Name: "exit"},
							},
						},
					},
				},
			},
			wantErr: nil,
		},
	}

	for _, tt := range tests {
		t.Run(tt.name, func(t *testing.T) {
			g := llrgen.New()
			got, err := g.Generate(context.Background(), tt.prog)

			assert.Equal(t, tt.want, got)
			assert.ErrorIs(t, err, tt.wantErr)
		})
	}
}

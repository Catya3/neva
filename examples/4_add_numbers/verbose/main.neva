// Here we learn `stream<T>` and streamers

component Main(start any) (stop any) {
	nodes {
		adder Adder<int>
		streamer PortStreamer<int>
		printer Printer<int>
	}
	net {
		:start -> (
			1 -> streamer:p[0],
			2 -> streamer:p[1]
		)
		streamer:seq -> adder:seq
		adder:res -> printer:data
		printer:sig -> :stop
	}
}
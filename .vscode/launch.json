{
  "version": "0.2.0",
  "configurations": [
    // === Vscode-neva extension debug tasks ===
    // extension itself
    {
      "name": "VSCode Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        // "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/web",
        "${workspaceFolder}/examples"
      ],
      "outFiles": ["${workspaceFolder}/web/out/**/*.js"],
      "preLaunchTask": "${defaultBuildTask}"
    },
    // run lsp in debugger
    {
      "name": "Language server (LSP) ",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/lsp",
      "cwd": "${workspaceFolder}",
      "args": ["-debug"]
    },
    // === Interpreter ===
    {
      "name": "Interpreter: do_nothing",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/interpreter",
      "cwd": "${workspaceFolder}/examples",
      "args": ["do_nothing"]
    },
    {
      "name": "Interpreter: do_nothing2",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/interpreter",
      "cwd": "${workspaceFolder}/examples",
      "args": ["do_nothing2"]
    },
    {
      "name": "Interpreter: add_numbers",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/interpreter",
      "cwd": "${workspaceFolder}/examples",
      "args": ["add_numbers/with_error_handling"]
    },
    {
      "name": "Interpreter: hello_world/verbose",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/interpreter",
      "cwd": "${workspaceFolder}/examples",
      "args": ["hello_world/verbose"]
    },
    {
      "name": "Interpreter: hello_world/with_sugar",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/interpreter",
      "cwd": "${workspaceFolder}/examples",
      "args": ["hello_world/with_sugar"]
